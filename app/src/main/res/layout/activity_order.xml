<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            tools:context="com.example.melon.mobilestudio.MapsActivity">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:src="@drawable/location_button"
                android:id="@+id/iv_location_button"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/currentlocation"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name" />

        </fragment>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/tv_userAddress"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/bt_popup"
                android:text="팝업!"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/bt_checkAddress"
                android:text="주소확인"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_laundryName"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_laundryInfo"
            android:textSize="15pt"/>

    </LinearLayout>

</LinearLayout>